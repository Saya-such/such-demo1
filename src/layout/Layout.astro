---
import "@/styles/global.css";
import Header from "@/components/Header/index.astro";
import Loader from "@/components/Loader/index.astro";
import Main from "@/components/Main.astro";
---

<!doctype html>
<html lang="ja">
  <head>
    <script>
      import checkFirstVisit from "@/libs/checkFirstVisit";
      checkFirstVisit();
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>△△ inc. | suchのデモページだよ~</title>
  </head>
  <body class="font-primary h-screen w-screen overflow-x-hidden">
    <Loader />
    <Header />

    <Main>
      <slot />
    </Main>

    <script>
      import enableScrollSmoother from "@/libs/enableScrollSmoother";
      import reload from "@/libs/reload";

      enableScrollSmoother();
      reload();
    </script>
  </body>
</html>
