---
import { SEO } from "astro-seo";
import "@/styles/global.css";
import Header from "@/components/Header/index.astro";
import Loader from "@/components/Loader/index.astro";
import Main from "@/components/Main.astro";
---

<!doctype html>
<html lang="ja">
  <head>
    <script>
      import checkFirstVisit from "@/libs/checkFirstVisit";
      checkFirstVisit();
    </script>
    <meta charset="utf-8" />
    <link rel="icon" href="./images/favicon.ico" sizes="32x32" />
    <link rel="icon" href="./images/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="./images/icon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="△△ inc. | suchのデモページです"
      description="Astro × GSAPで制作したsuchのデモページです。"
      openGraph={{
        basic: {
          title: "△△ inc. | suchのデモページです",
          type: "website",
          image: "./images/such-demo1-caputure.jpg",
        },
      }}
      twitter={{
        creator: "@Chaya0815",
      }}
    />
  </head>
  <body class="font-primary h-screen w-screen overflow-x-hidden">
    <Loader />
    <Header />

    <Main>
      <slot />
    </Main>

    <script>
      import enableScrollSmoother from "@/libs/enableScrollSmoother";
      import reload from "@/libs/reload";

      enableScrollSmoother();
      reload();
    </script>
  </body>
</html>
