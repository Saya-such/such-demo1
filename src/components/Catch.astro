---
import cn from "@/libs/cn";

interface Props {
  id?: string;
  h1?: boolean;
  others?: string;
}

const { id, h1 = false, others } = Astro.props as Props;

const catchWrapperStyle = cn(
  `absolute pt-5 left-4 h-68 md:left-6 lg:h-33 xl:h-41 2xl:h-51 portrait:md:h-98 portrait:lg:h-138`,
  others,
);

const catchStyle = cn(
  `font-en font-bold text-[68px] text-black leading-[1.16] lg:text-7xl xl:text-8xl 2xl:text-9xl portrait:md:text-[100px] portrait:lg:text-[144px]`,
);
---

<div id={id} class={catchWrapperStyle}>
  {
    h1 ? (
      <h1 class={catchStyle}>
        <span class="lg:hidden portrait:lg:block">
          Hype
          <br />
          Meets
          <br />
          Strategy.
        </span>
        <span class="hidden lg:block portrait:lg:hidden">
          Hype Meets Strategy.
        </span>
      </h1>
    ) : (
      <p class={catchStyle} aria-hidden="true">
        <span class="lg:hidden portrait:lg:block">
          Hype
          <br />
          Meets
          <br />
          Strategy.
        </span>
        <span class="hidden lg:block portrait:lg:hidden">
          Hype Meets Strategy.
        </span>
      </p>
    )
  }
</div>
