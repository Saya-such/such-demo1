---
import Catch from "@/components/Catch.astro";
import sliders from "@/data/sliders";
---

<section id="hero">
  <Catch others="bottom-7 xl:bottom-14 min-[1728px]:bottom-16" />
  <div class="h-lvh w-lvw p-1 md:p-2">
    {
      sliders
        .filter((img) => img.id === 1)
        .map((img) => (
          <>
            <img
              src={img.sp}
              class="h-full w-full rounded object-cover md:hidden"
            />
            <img
              src={img.src}
              class="hidden h-full w-full rounded object-cover md:block"
            />
          </>
        ))
    }
  </div>
</section>
