---
import BoldText from "@/components/BoldText.astro";
import Btn from "@/components/Btn.astro";
---

<div id="bottom" class="relative bg-white px-2 pb-4 lg:px-10">
  <div
    class="container-base relative flex min-h-[calc(100vh-72px)] flex-col items-stretch lg:min-h-[calc(100vh-128px)]"
  >
    <BoldText
      lg={true}
      others="m-auto pt-10 text-center z-10 max-[640px]:text-lg"
    >
      最後まで見てくれてありがとう！
    </BoldText>
    <img
      class="bottom-img absolute inset-0 z-5 m-auto w-2/3 pt-8 opacity-0 md:w-1/3 lg:pt-12 xl:w-1/5"
      src="./images/bottom-heart.webp"
      alt="heart"
    />
  </div>
  <!-- 自社サイト完成時にvisible={false}削除 -->
  <Btn right={false} en={false} text="suchに戻る" visible={false} />
</div>
