---
import sliders from "@/data/sliders";
---

<div id="hero-slider" class="swiper z-0 h-full w-full rounded">
  <div class="swiper-wrapper h-full w-full">
    {
      sliders.map((img) => (
        <div class="swiper-slide h-full w-full">
          <img src={img.sp} class="h-full w-full object-cover md:hidden" />
          <img
            src={img.src}
            class="hidden h-full w-full object-cover md:block"
          />
        </div>
      ))
    }
  </div>
  <div
    class="swiper-bg absolute inset-0 z-1 h-lvh w-lvw origin-top-left overflow-y-hidden bg-white"
  >
  </div>
</div>

<script>
  import initSwiperManager from "./initSwiperManager";

  initSwiperManager();
</script>

<style>
  .swiper-slide img {
    transition: transform 5s ease-in;
  }

  .swiper-slide-active img {
    transform: scale(1.05);
  }
</style>
