---
import Layout from "@/layout/Layout.astro";
import Hero from "@/components/Hero/index.astro";
import Concept from "@/components/Concept/index.astro";
import Works from "@/components/Works/index.astro";
import Service from "@/components/Service/index.astro";
import News from "@/components/News/index.astro";
import Company from "@/components/Company.astro";
import Bottom from "@/components/Bottom.astro";
import type { ColorMode } from "@/types/ColorMode";

interface Props {
  color: ColorMode;
}

const { color = "light" } = Astro.props as Props;
---

<Layout>
  <div id="page-root" data-color={color}>
    <Hero />

    <Concept />

    <Works color={color} />

    <Service color={color} />

    <News color={color} />

    <Company />

    <Bottom />
  </div>
</Layout>

<script>
  import initServiceColorMode from "@/libs/initServiceColorMode";

  initServiceColorMode();
</script>
